                <piston_solitary>
                    <mkbound value="{mk}" comment="Mk-Bound of selected particles" />
                    <theory value="{theory}" comment="Theory of generation 1:Rayleigh (Serre 1953), 2: Boussinesq (Goring 1978) 3: KdV (Clamond and Germain 1999) (def=2)" />
                    <start value="{start}" comment="Start time (default=0)" />
                    <depth value="{depth}" comment="Water depth (default=0)" />
                    <pistondir x="{piston_dir[0]}" y="{piston_dir[1]}" z="{piston_dir[2]}" comment="Movement direction (default=(1,0,0))" />
                    <durationcoef value="{wave_1_duration_coef}" comment="Coefficient of movement duration (def=1)" />
                    <waveheight value="{wave_height}" comment="Wave height" />
                    <waves value= "{n_waves}" comment="Number of solitary waves (def=1)" />
                    <startcoef2 value="{wave_2_start_coef}" comment="Defines start of next wave according to period of previous wave. (def=1)" />
			        <durationcoef2 value="{wave_2_duration_coef}" comment="Coefficient of movement duration for 2nd wave (def=value of previous wave)" />
			        <waveheight2 value="{wave_2_height}" comment="Wave height for 2nd wave (def=value of previous wave" />
			        <startcoef3 value="{wave_3_start_coef}" comment="Defines start of next wave according to period of previous wave. (def=value of previous wave)" />
			        <durationcoef3 value="{wave_3_duration_coef}" comment="Coefficient of movement duration for 3rd wave (def=value of previous wave)" />
			        <waveheight3 value="{wave_3_height}" comment="Wave height for 3rd wave (def=value of previous wave" />
                    <savemotion time="{savemotion_time}" timedt="{savemotion_timedt}" xpos="{savemotion_xpos}"  comment="Saves motion data. xpos and zpos are optional. zpos=-depth of the measuring point" />  <!-- zpos="{savemotion_zpos}"-->
{awas_template}


                </piston_solitary>